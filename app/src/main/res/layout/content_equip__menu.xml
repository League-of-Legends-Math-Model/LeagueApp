<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_equip__menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sisyphus.leagueapp.Equip_Menu"
    tools:showIn="@layout/activity_equip__menu">

    <ImageView
        android:layout_marginLeft="0dp"
        android:layout_marginTop="370dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/slot1"
        android:scaleType="centerInside" />

    <ImageView
        android:layout_marginTop="370dp"
        android:layout_marginLeft="50dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/slot2"
        android:scaleType="centerInside" />

    <ImageView
        android:layout_marginLeft="100dp"
        android:layout_marginTop="370dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/slot3"
        android:scaleType="centerInside"
        />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="0dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/slot4"
        android:scaleType="centerInside"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/slot5"
        android:scaleType="centerInside"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="420dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/slot6"
        android:scaleType="centerInside"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:textSize="10pt"
        android:text="Item Options" />


    <GridView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/gridview"
        android:columnWidth="50dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="none"
        android:gravity="center"
        android:layout_marginTop="153dp"
 />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:id="@+id/EnemyChamp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/trash"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="150dp"
        android:id="@+id/trash"

        android:layout_toRightOf="@+id/slot3" />

    <TextView
        android:text="Champion name"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
/>

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchView"
        android:layout_toRightOf="@+id/slot2"
        android:layout_toEndOf="@+id/slot2"
        android:id="@+id/level" />

    <Button
        android:text="up"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/button7"
        android:onClick="incrementLVL"/>

    <SearchView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="127dp"
        android:id="@+id/searchView"
        android:layout_alignBottom="@+id/button7"
        android:layout_marginStart="27dp"
        />

    <Button
        android:text="Button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="60dp"
        android:id="@+id/button8"
        android:onClick="decrementLVL"/>

</RelativeLayout>
